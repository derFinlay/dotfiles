  "spacing": 0,
  "reload_style_on_change": true,
  "modules-left": [
    "custom/arch",
    "temperature",
    "custom/gpu",
    "memory",
    "cpu",
    "network"
  ],
  "modules-center": ["hyprland/workspaces"],
  "modules-right": ["custom/updates", "pulseaudio", "custom/spotify", "clock"],
  "cpu": {
    "format": "ó°› {usage}%",
    "interval": 5
